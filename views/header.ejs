<!DOCTYPE html>
<html>
<head>
	<title><%= title %> - <%= website %></title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scale=0">
	<link rel="stylesheet" href="http://cdn.bootcss.com/semantic-ui/2.2.6/semantic.min.css" />
	<link rel="stylesheet" href="/styles/common.css" />
	<script src="/dist/build.min.js"></script>
</head>
<body>
<div id="page-wrap" class="page-wrap">
	<!-- 导航 -->
	<div class="ui menu-control">
		<a href="/" v-bind:class="[isMobile?'mini':'']" class="ui teal basic button">
			<i class="home icon" v-if="!isMobile"></i>首页
		</a>
		<a href="/user/create" v-bind:class="[isMobile?'mini':'']" class="ui green basic button">
			<i class="write icon" v-if="!isMobile"></i>创作
		</a>
		<a href="/readme" v-bind:class="[isMobile?'mini':'']" class="ui blue basic button">
			<i class="share alternate icon" v-if="!isMobile"></i>须知
		</a>
		<div class="ui dropdown">
		    <a href="/user/index" v-bind:class="[isMobile?'mini':'']" class="ui orange basic button">
				<i class="child icon" v-if="!isMobile"></i>我的
			</a>
		    <div class="menu">
		    	<% if(!isLogin){ %>
			        <div class="item" @click="goto('/login')">
			        	<i class="sign in icon" v-if="!isMobile"></i>登录
			        </div>
			        <div class="item" @click="goto('/signup')">
			            <i class="sign out icon" v-if="!isMobile"></i>注册
			        </div>
		        <% }else{ %>
		        	<div class="item" @click="goto('/user/logout')">
			        	<i class="reply icon" v-if="!isMobile"></i>登出
			        </div>
			        <div class="item" @click="goto('/user/index')">
			        	<i class="leaf icon" v-if="!isMobile"></i>书房
			        </div>
		        <% } %>
		    </div>
		</div>
		<script>
			new Vue({
				el : '.ui.menu-control',
				data : {
					isMobile : device.mobile()
				},
				methods : {
					goto : function(url){
						window.location.href = url;
					}
				}
			})
		</script>
	</div>